<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="CSS" injector-id="xml">
      <display-name>mj-style</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("mj-style")).withNamespace(string().equalTo("http://www.w3.org/1999/xhtml"))]]></place>
      <xpath-condition>lower-case(@type)='text/css'</xpath-condition>
    </injection>
  </component>
</application>